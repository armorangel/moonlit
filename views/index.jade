html
	head
		title jade
		link(rel='stylesheet', href='./css/index.css')
	body
		button(class="tablink", onlick="openPage('Home', this, 'red')") Home
		button(class="tablink", onlick="openPage('News', this, 'green')", id="defaultOpen") News
		button(class="tablink", onlick="openPage('Contact', this, 'blue')") Contact
		button(class="tablink", onlick="openPage('About', this, 'orange')") About
		
		div(id="Home" class="tabcontent")
			h3 Home
			p Home is where the heart is..
			
		div(id="News" class="tabcontent")
			h3 News
			p Some news this fine day!
			
		div(id="Contact" class="tabcontent")
			h3 Contact
			p Get in touch, or swing by for a cup of coffee.
			
		div(id="About" class="tabcontent")
			h3 About
			p Who we are and what we do.
			
		script(src='./js/index.js')
		